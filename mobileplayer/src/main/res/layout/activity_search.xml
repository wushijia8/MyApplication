<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.jaris.mobileplayer.search.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ff3097fd"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_input"
            android:layout_weight="1"
            android:background="@drawable/tv_search_bg_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/tv_search_drawable_selector"
            android:drawablePadding="3dp"
            android:layout_marginLeft="8dp"
            android:hint="全网搜素"
            android:textColor="@drawable/tv_search_textcolor_selector"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_voice"
            android:layout_marginLeft="5dp"
            android:src="@drawable/voice_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_search"
            android:text="搜索"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>

        <ProgressBar
            android:id="@+id/progressbar"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_nodata"
            android:visibility="gone"
            android:text="抱歉，没有您要的内容..."
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>
