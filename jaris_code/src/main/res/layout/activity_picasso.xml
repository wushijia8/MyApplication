<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_picasson"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.jaris.jaris_code.picasso.activity.PicassoActivity">

    <include layout="@layout/titlebar" />

    <Button
        android:id="@+id/bt_picasso_base"
        android:text="基本方法使用"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_picasso_listview"
        android:text="ListView中加载网络图片"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bt_picasso_tranformations"
        android:text="图片变换"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_picasso_result1"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/iv_picasso_result2"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <ImageView
                android:id="@+id/iv_picasso_result3"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp" />



        </LinearLayout>
    </ScrollView>



</LinearLayout>
